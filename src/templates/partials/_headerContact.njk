<div class="header__overlay olcontact">
	<div class="header__hidden hdcontact"></div>
	<div class="header__contact">
		<div class="btncloseCont"></div>
		<div class="container">
			<div class="header__contact-info">
				<div class="header__contact-head">
					<h5 class="h5">
						Contact us
					</h5>
					<p>
						We would love to speak to you.  Feel free to call, send us an email, Tweet us or simply complete the enquiry form.
					</p>
				</div>
				<form class="form_head">
					<div class="flex">
						<label for="name_head" class="label_head label_head-name">
							<input type="text" id="name_head" name="name_head" placeholder="Your name" class="input_head">
							<span class="error">Error message</span>
						</label>
						<label for="telephone_head" class="label_head label_head-telephone">
							<input type="text" id="telephone_head" name="telephone_head" placeholder="Telephone number" class="input_head">
							<span class="error">Error message</span>
						</label>
						<label for="country_head" class="label_head label_head-country">
							<input type="text" id="country_head" name="country_head" placeholder="Country" class=" input_head">
							<span class="error">Error message</span>
						</label>
						<label for="city_head" class="label_head label_head-city">
							<input type="text" id="city_head" name="city_head" placeholder="City" class="input_head">
							<span class="error">Error message</span>
						</label>
						<label for="email_head" class="label_head  label_head-email">
							<input type="text" id="email_head" name="email_head" placeholder="Email Address" class="input_head">
							<span class="error">Error message</span>
						</label>
						<label for="message_head" class="label_head label_head-message">
							<textarea name="message_head" id="message_head" placeholder="Your Message" class="input_head textarea_head"></textarea>
						</label>
					</div>
					<button type="submit" class="btn_form">
						Send Message
					</button>
				</form>
			</div>
		</div>
	</div>
</div>